#!/data/data/com.termux/files/usr/bin/bash

# Termux URL Opener - Automatically handles shared URLs
# Place this file in: ~/bin/termux-url-opener

# Get the shared URL
url="$1"

# Path to your download script
SCRIPT_PATH="$HOME/download_videos.sh"

# Check if download script exists
if [ ! -f "$SCRIPT_PATH" ]; then
    echo "Error: Download script not found at $SCRIPT_PATH"
    echo "Please update SCRIPT_PATH in this script"
    exit 1
fi

# Run the download script with the URL as argument
bash "$SCRIPT_PATH" "$url"
